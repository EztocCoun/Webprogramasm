<link rel="stylesheet" href="/css/main.css">

<%- include('partials/header') %> 
<body>
<%- include('partials/nav') %>
  <main>
    <div class="profile-container">
        <h1>My Account</h1>
        <p><strong>Profile Picture:</strong><br>
          <img src="<%= user.profilePicture %>" alt="Profile Picture" width="100" height="100">
        </p>
        <p><strong>Full Name:</strong> <%= user.firstName %> <%= user.lastName %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Phone Number:</strong> <%= user.phone %></p>
        <p><strong>Address:</strong> <%= user.address %>, <%= user.city %>, <%= user.zipcode %>, <%= user.country %></p>
        <% if (user.accountType === 'storeOwner') { %>
            <p><strong>Business Name:</strong> <%= user.businessName %></p>
            <p><strong>Store Name:</strong> <%= user.storeName %></p>
            <p><strong>Store Category:</strong> <%= user.storeCategory %></p>
        <% } %>
        <form action="/logout" method="get">
            <button type="submit" class="btn">Logout</button>
        </form>
    </div>
  </main>
    <footer>
        <%- include('partials/footer') %>
    </footer>
</body>
</html>
